// ConsoleApplication1.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "iostream"
#include "string"
using namespace std;

void convert(int choice)
{	
	string yes;
	do
	{

	
		double dollar, ryal, egp, euro;

		switch (choice)
			{
			case 1:

				cout << " enter the amount : ";

				cin >> ryal;

				dollar = ryal/3.75;

				cout << ryal << " ryals = " << dollar << " $ " << endl;

				break;

			case 2:

				cout << " enter the amount : ";

				cin >> dollar;

				ryal = dollar * 3.75;

				cout << dollar << " $ = " << ryal << " ryals " << endl;

				break;

			case 3:

				cout << " enter the amount : ";

				cin >> egp;

				dollar = egp/7.58;

				cout << egp << " egp= " << dollar << " $ " << endl;
				break;

			case 4:

				cout << " enter the amount : ";

				cin >> dollar;

				egp = dollar / 7.58;

				cout << dollar << " $ = " << egp << " egp " << endl;
				break;

			case 5:

				cout << " enter the amount : ";

				cin >> euro;

				dollar = euro/1.119;

				cout << euro << " euro = " << dollar << " $ " << endl;
				break;

			case 6:

				cout << " enter the amount : ";

				cin >> dollar;

				euro = dollar * 0.8937;

				cout << dollar << " $= " << euro << "euro " << endl;
				break;


			case 7:

				cout << " enter the amount : ";

				cin >> egp;

				euro = egp/ 8.5393;

				cout << egp << " egp= " << euro << "euro " << endl;
				break;

			case 8:

				cout << " enter the amount : ";

				cin >> euro;

				egp = euro * 0.1171;

				cout << euro << " euro= " << egp << "egp" << endl;
				break;


			default:

				cout << "wrong choice \n";

				break;
	}
	cout << "To repeat it press 'Y' or 'y' \n to close 'press any other key" << endl;
	cin >> yes;
} while (yes=="Y"||yes=="y");
}


int _tmain(int argc, _TCHAR* argv[])
{
	cout << "welcome to Currency Converter" << endl;

	int choice1;

	cout << "1- ryal to dollar \n2- dollar to ryal \n3-egp to dollar \n4-dollar to egp \n5- euro to dollar \n6-dollar to euro\n7-egp to euro\n8-euro to egp\n your choice : ";
	cin >> choice1;
	convert(choice1);

	return 0;
}

